extends ../layout

block append content
    include ./sidebar.pug

    div(class='content-wrapper')    
        include ../includes/content_header.pug

        div(class='content')
            div(class='container-fluid')
                div(class='row')
                    div(class='col-md-12')
                        div(class='card text-center card-secondary')
                            div(class='card-header')
                                h3(class='card-title') 공통코드 조회
                                div(class='card-tools')
                                    button(type='button', class='btn btn-tool', data-card-widget='collapse', data-toggle='tooltip', title='Collapse')
                                        i(class='fas fa-minus')
                                //- .card-header   
                            div(class='card-body scroll-container')
                                include ./form/system/codeSearch.pug

                        div(class='card text-center card-secondary')
                            div(class='card-header')
                                h3(class='card-title') 공통코드 상세조회
                                div(class='card-tools')
                                    button(type='button', class='btn btn-tool', data-card-widget='collapse', data-toggle='tooltip', title='Collapse')
                                        i(class='fas fa-minus')
                                //- .card-header   
                            div(class='card-body scroll-container')
                                include ./form/system/codeDetailSearch.pug
append scripts
    include ./scripts/comm_code_search_script.pug